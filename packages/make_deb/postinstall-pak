#! /bin/bash
#
# run after the pakage is installed
#
INSTALL_CMD="cp -xR"

echo "POST-INSTALL"

# copy pdsettings file to every home dir
echo "Copy pdsettings to all home dirs"
for i in $( ls /home ); do
	echo "	/home/$i/.pdsettings"
	$INSTALL_CMD /usr/local/lib/robotcowboy/pdsettings /home/$i/.pdsettings
	$INSTALL_CMD /usr/local/lib/robotcowboy/asoundrc /home/$i/.asoundrc
done

# set file permissions for robotcowboy folder (samples should be readable ...)
chmod -R +r /usr/local/lib/robotcowboy

# set puredata init script permissions
#chmod o+x /etc/init.d/puredata


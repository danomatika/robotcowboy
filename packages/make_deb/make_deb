#! /bin/bash

# make a Debian package

NAME="robotcowboy"
VERSION=$(date +%y.%m.%d)

# library/build depenencies
PD="" #"puredata, rc-unitd, rc-visual"

# exit if checkinstall is not installed
if [ ! -e "/usr/bin/checkinstall" ] ; then
	echo "cannot build deb package, checkinstall is not installed"
	sleep 2
	exit 0
fi

# build the package
checkinstall -D -y --install=no --pkgname="$NAME" --pkgversion="$VERSION" \
--requires="$PD" --maintainer="danomatika@gmail.com" --deldoc=yes \
--strip=no --stripso=no --deldesc=yes --delspec=yes ./install

# move package
echo "Move deb to ../"
mv *.deb ../

# clean
rm *.tgz
